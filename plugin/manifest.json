{
    "name": "Chinese Reader",
    "version": "0.1",
    "description": "Determine the readability of Chinese text",
    "page_action": {
        "default_icon": {
            "64": "img/languages_64.png",
            "32": "img/languages_32.png"
        },
        "default_title": "Chinese Reader",
        "default_popup": "popup/readability.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab"
    ],
    "manifest_version": 2
}